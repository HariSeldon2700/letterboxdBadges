{
  "manifest_version": 3,
  "name": "Letterboxd Badges",
  "version": "2.8.3.72",
  "description": "Books, Remakes/Related, and Country (with emoji flag + tooltip). Inline on film pages and overlay on posters.",
  "author": "Paul Baran",
  "homepage_url": "https://github.com/HariSeldon2700/letterboxdBadges",
  "update_url": "https://clients2.google.com/service/update2/crx",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "Letterboxd Badges",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://letterboxd.com/*"],
      "js": ["content.js"]
    }
  ],

  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://letterboxd.com/*",
    "https://query.wikidata.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://letterboxd.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}